---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout title="Admin Login">
  <div class="login-container">
    <div class="login-card">
      <h2 style="color: blue;">Code Version 3.0 (Diagnostic)</h2>
      <h1>Admin Login</h1>
      <form id="login-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>
        <button type="submit" class="login-button">Login</button>
        <p id="error-message" style="color: red; margin-top: 1rem;"></p>
      </form>
    </div>
  </div>
</BaseLayout>

<script>
  // FINAL DIAGNOSTIC SCRIPT
  const form = document.getElementById("login-form");

  if (form) {
    form.addEventListener("submit", (e) => {
      e.preventDefault();
      alert("SUCCESS: The JavaScript is running! Now we can fix the final issue.");
      
      const errorMessage = document.getElementById("error-message");
      if(errorMessage) {
        errorMessage.textContent = "JavaScript is executing. The problem is isolated.";
      }
    });
  } else {
    alert("ERROR: The form element was not found by the script!");
  }
</script>

<style>
  /* Styles are unchanged */
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    background-color: #f7fafc;
  }
  .login-card {
    background: white;
    padding: 2.5rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    text-align: center;
  }
  h1 {
    margin-bottom: 1.5rem;
    font-size: 1.875rem;
    font-weight: 600;
    color: #2d3748;
  }
  .form-group {
    margin-bottom: 1.5rem;
    text-align: left;
  }
  label {
    display: block;
    margin-bottom: 0.5rem;
    color: #4a5568;
    font-weight: 500;
  }
  input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #cbd5e0;
    border-radius: 4px;
    font-size: 1rem;
  }
  .login-button {
    width: 100%;
    padding: 0.75rem;
    background-color: #4299e1;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
  }
</style>
