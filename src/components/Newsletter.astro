<style>
  #newsletter-signup {
    background-color: #f0f4f8;
    padding: 2rem;
    text-align: center;
  }
  #newsletter-signup h2 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }
  #newsletter-signup p {
    margin-bottom: 1.5rem;
  }
  #newsletter-signup form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }
  #newsletter-signup .form-row {
    display: flex;
    gap: 1rem;
  }
  #newsletter-signup input[type="text"],
  #newsletter-signup input[type="email"] {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  #newsletter-signup .consent {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }
  #newsletter-signup button {
    background-color: #ff6b6b;
    color: white;
    padding: 0.75rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  #newsletter-signup button:hover {
    background-color: #e05252;
  }
  #newsletter-signup .note {
    font-size: 0.8rem;
    color: #666;
  }
  #success-message {
    display: none;
    color: green;
  }
</style>
<div id="newsletter-signup" role="complementary" aria-label="Newsletter Signup">
  <h2>Join Our Newsletter</h2>
  <p>Get weekly study tips & updates.</p>
  <form id="newsletter-form">
    <div class="form-row">
      <input type="text" id="name" name="name" placeholder="Your Name" />
      <input type="email" id="email" name="email" placeholder="Your Email" required />
    </div>
    <div class="consent">
      <input type="checkbox" id="consent" name="consent" required />
      <label for="consent"
        >I agree to receive emails and accept the <a href="/privacy">Privacy Policy</a>.</label
      >
    </div>
    <button type="submit">Subscribe</button>
  </form>
  <p id="success-message">Thanks! Check your email to confirm your subscription.</p>
  <p class="note">Weekly updates. Unsubscribe anytime.</p>
</div>

<script>
  const form = document.getElementById("newsletter-form") as HTMLFormElement;
  const successMessage = document.getElementById("success-message") as HTMLParagraphElement;

  form.addEventListener("submit", async (event) => {
    event.preventDefault();
    const formData = new FormData(form);
    const response = await fetch("/api/subscribe", {
      method: "POST",
      body: formData,
    });

    if (response.ok) {
      form.style.display = "none";
      successMessage.style.display = "block";
    } else {
      const error = await response.text();
      alert(`Error: ${error}`);
    }
  });
</script>
